@model Server.Models.ModeratorModel

@{
    ViewData["Title"] = "Login in";
}

<div class="row align-items-center h-100">
			<div class="col-md-4 mx-auto">
				<div class="card">
					<div class="card-header">
						<h4>Login in</h4>
					</div>
					<div class="card-body">
						<form asp-action="Login">
							<div class="form-group">
								<label for="inputUsername">Username</label>
								<input type="text" class="form-control" asp-for="Login" placeholder="Enter username">
							</div>
							<div class="form-group">
								<label for="inputPassword">Password</label>
								<input type="password" class="form-control" asp-for="Password" placeholder="Enter password">
							</div>
							<p></p>
							<button type="submit" class="btn btn-primary btn-block">Login</button>
						</form>
					</div>
				</div>
			</div>
		</div>
